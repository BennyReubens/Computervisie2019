\ProvidesPackage{articletitle}[2018/09/28 title page for the article template]
\RequirePackage{graphicx}          % Images

% Define the colors

\RequirePackage{xcolor}

% Colors for the new UGent housestyle
\definecolor{uGentBlue}{RGB}{30,100,200}
\definecolor{uGentYellow}{RGB}{255,210,0}
\definecolor{secColour}{RGB}{45,140,168}   % TODO add options to choose faculty and set this accordingly
\definecolor{grey}{RGB}{125,125,125}

% To use the titlepage without the ugentbook class
\providecommand{\coltitlepage}{\color{uGentBlue}}

% Define macros and commands 

% title
\renewcommand{\title}[1]{
  \def\inserttitle{#1}
}

% subtitle
\renewcommand{\subtitle}[1]{
	\def\insertsubtitle{#1}
}

% promotor
\def\@promotor{}
\newcommand{\promotor}[1]{
    \def\insertpromotor{#1}
}

% semester
\def\@faculty{}
\newcommand{\faculty}[1]{
	\def\insertfaculty{#1}
}

% author
\newcommand{\insertauthor}{\@author}

% degree
\def\@degree{}
\newcommand{\degree}[1]{
	\def\insertdegree{#1}
}

% date
\newcommand{\insertdate}{\@date}


% Building the title page
\renewcommand{\maketitle}{
	\newgeometry{top=60bp,bottom=60bp}
	\begin{titlepage}
		\vspace*{4.7cm}
		\noindent
		\fontsize{35pt}{60pt}\selectfont\textcolor{uGentBlue}{\textbf{\inserttitle}}\newline
		\fontsize{20pt}{30pt}\selectfont\textcolor{uGentBlue}{\insertsubtitle}\newline
		\vspace*{2cm}
		
		\noindent
		\fontsize{16pt}{20pt}\selectfont
		\insertauthor\newline
		\fontsize{12pt}{20pt}\selectfont
		\insertdegree\newline
		\insertdate
		
		\begin{figure}[b]
			\includegraphics[width=0.23\textwidth,keepaspectratio]{ugentlogo} % Logo of the University of Ghent
			\hspace{0.4\textwidth}
			\includegraphics[width=0.37\textwidth,keepaspectratio]{wetlogo} % Logo of the faculty of sciences
		\end{figure}
	\end{titlepage}
	\restoregeometry
	\setcounter{page}{1}
}